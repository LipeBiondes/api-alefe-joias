generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Funcionarios {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String    @unique
  password   String
  admin      Boolean
  created_at DateTime? @default(now())

  @@map("funcionarios")
}

model Clientes {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String    @unique
  phone      String
  created_at DateTime? @default(now())

  @@map("clientes")
}

model Produto {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  ref             String @unique
  brand           String
  name            String
  price           Float
  amount_in_stock Int
  url_Image       String

  @@map("produtos")
}

model Pedido {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  client_id    String
  employee_id  String
  products     Json[]
  total        Float
  created_at   DateTime? @default(now())
  delivered_at DateTime?
  progress     String

  @@map("pedidos")
}
