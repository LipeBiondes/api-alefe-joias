generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id     String @id @default(uuid())
  nome   String
  email  String @unique
  cpf    String
  numero String
  senha  String

  pedidos Pedido[]

  @@map("usuarios")
}

model Funcionario {
  id    String @id @default(uuid())
  nome  String
  email String @unique
  senha String

  pedidos Pedido[]

  @@map("funcionarios")
}

model Produto {
  id         String  @id @default(uuid())
  nome       String
  referencia String  @unique
  descricao  String
  preco      Float
  quantidade Int
  classe_id  String?

  pedido Pedido[]
  classe Classe?  @relation(fields: [classe_id], references: [id])

  @@map("produtos")
}

model Pedido {
  id             String    @id @default(uuid())
  criadoEm       DateTime  @default(now()) @map("criado_em")
  finalizado_em  DateTime?
  quantidade     Int
  total          Float
  status         String
  usuario_id     String
  funcionario_id String

  funcionario Funcionario @relation(fields: [funcionario_id], references: [id])
  usuario     Usuario     @relation(fields: [usuario_id], references: [id])
  produtos    Produto[]

  @@map("pedidos")
}

model Classe {
  id   String @id @default(uuid())
  nome String

  produtos Produto[]

  @@map("classes")
}
